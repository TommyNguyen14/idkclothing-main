{{ 'custom-footer-styles.css' | asset_url | stylesheet_tag }}

<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="footer__content-top page-width">
    <!-- Shipping Info Bar -->
    <div class="footer__shipping-info">
      <div class="shipping-info-item">
        <span class="shipping-icon">ðŸšš</span>
        <span>Worldwide Shipping</span>
      </div>
      <div class="shipping-info-item">
        <span class="shipping-icon">ðŸ”’</span>
        <span>Secure Checkout</span>
      </div>
      <div class="shipping-info-item">
        <span class="shipping-icon">ðŸ”„</span>
        <span>Easy Exchange & Returns</span>
      </div>
    </div>

    <!-- Main Footer Content -->
    <div class="footer__blocks-wrapper">
      {%- for block in section.blocks -%}
        <div class="footer-block grid__item{% if block.type == 'link_list' %} footer-block--menu{% endif %}" {{ block.shopify_attributes }}>
          {%- if block.settings.heading != blank -%}
            <h2 class="footer-block__heading inline-richtext">{{- block.settings.heading -}}</h2>
          {%- endif -%}

          {%- case block.type -%}
            {%- when 'link_list' -%}
              {%- if block.settings.menu != blank -%}
                <ul class="footer-block__details-content list-unstyled">
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}" class="link link--text list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}">
                        {{ link.title | escape }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>

    <!-- Sitemap Section -->
    <div class="footer__sitemap">
      <h2 class="footer-block__heading">SITE MAP</h2>
      <div class="footer__sitemap-grid">
        <!-- Main Pages -->
        <div class="footer__sitemap-column">
          <h3 class="footer__sitemap-subheading">Pages</h3>
          <ul class="footer__sitemap-links">
            <li><a href="/" class="link link--text">Home</a></li>
            <li><a href="/pages/about" class="link link--text">About</a></li>
            <li><a href="/pages/contact" class="link link--text">Contact</a></li>
            <li><a href="/pages/faq" class="link link--text">FAQ</a></li>
            <li><a href="/pages/clubhouse" class="link link--text">Clubhouse</a></li>
            <li><a href="/search" class="link link--text">Search</a></li>
          </ul>
        </div>
        
        <!-- Collections -->
        <div class="footer__sitemap-column">
          <h3 class="footer__sitemap-subheading">Collections</h3>
          <ul class="footer__sitemap-links">
            <li><a href="/collections/all" class="link link--text">Shop All</a></li>
            <li><a href="/collections/best-sellers" class="link link--text">Best Sellers</a></li>
            <li><a href="/collections/hoodies" class="link link--text">Hoodies</a></li>
            <li><a href="/collections/denim" class="link link--text">Denim</a></li>
            <li><a href="/collections/basics" class="link link--text">Basics</a></li>
            <li><a href="/collections/knitwear" class="link link--text">Knitwear</a></li>
            <li><a href="/collections/tees" class="link link--text">Tees</a></li>
            <li><a href="/collections/bottoms" class="link link--text">Bottoms</a></li>
            <li><a href="/collections/small-goods" class="link link--text">Small Goods</a></li>
          </ul>
        </div>
        
        <!-- Customer Account -->
        <div class="footer__sitemap-column">
          <h3 class="footer__sitemap-subheading">Account</h3>
          <ul class="footer__sitemap-links">
            <li><a href="/account" class="link link--text">My Account</a></li>
            <li><a href="/account/login" class="link link--text">Login</a></li>
            <li><a href="/account/register" class="link link--text">Register</a></li>
            <li><a href="/cart" class="link link--text">Cart</a></li>
            <li><a href="/pages/shipping-policy" class="link link--text">Shipping</a></li>
            <li><a href="/pages/return-policy" class="link link--text">Returns</a></li>
          </ul>
        </div>
        
        <!-- Legal -->
        <div class="footer__sitemap-column">
          <h3 class="footer__sitemap-subheading">Legal</h3>
          <ul class="footer__sitemap-links">
            <li><a href="/pages/privacy-policy" class="link link--text">Privacy Policy</a></li>
            <li><a href="/pages/terms-of-service" class="link link--text">Terms of Service</a></li>
            <li><a href="/pages/refund-policy" class="link link--text">Refund Policy</a></li>
            <li><a href="/pages/size-guide" class="link link--text">Size Guide</a></li>
            <li><a href="/pages/care-instructions" class="link link--text">Care Instructions</a></li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Newsletter Section -->
    <div class="footer-block--newsletter">
      {%- if section.settings.newsletter_enable -%}
        <div class="footer-block__newsletter">
          <h2 class="footer-block__heading">GET 10% OFF YOUR FIRST ORDER BY JOINING THE CLUB.</h2>
          <p>Stay updated about the latest releases and get exclusive deals :-)</p>
          
          {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="newsletter-form__field-wrapper">
              <div class="field">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="field__input"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="ContactFooter-error"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="ContactFooter-success"
                  {% endif %}
                  placeholder="Enter your Email"
                  required
                >
                <label class="field__label" for="NewsletterForm--{{ section.id }}">
                  {{ 'newsletter.label' | t }}
                </label>
                <button
                  type="submit"
                  class="newsletter-form__button field__button"
                  name="commit"
                  id="Subscribe"
                  aria-label="{{ 'newsletter.button_label' | t }}"
                >
                  CLAIM MY 10% DISCOUNT
                </button>
              </div>
              {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="ContactFooter-error">
                  <span class="svg-wrapper">
                    {{- 'icon-error.svg' | inline_asset_content -}}
                  </span>
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </small>
              {%- endif -%}
            </div>
            {%- if form.posted_successfully? -%}
              <h3
                class="newsletter-form__message newsletter-form__message--success form__message"
                id="ContactFooter-success"
                tabindex="-1"
                autofocus
              >
                <span class="svg-wrapper">
                  {{- 'icon-success.svg' | inline_asset_content -}}
                </span>
                {{- 'newsletter.success' | t }}
              </h3>
            {%- endif -%}
          {%- endform -%}
        </div>
      {%- endif -%}

      {%- if section.settings.show_social -%}
        {%- liquid
          assign social_links = false
          if settings.social_twitter_link != blank or settings.social_facebook_link != blank or settings.social_pinterest_link != blank or settings.social_instagram_link != blank or settings.social_youtube_link != blank or settings.social_vimeo_link != blank or settings.social_tiktok_link != blank or settings.social_tumblr_link != blank or settings.social_snapchat_link != blank
            assign social_links = true
          endif
        -%}
        {%- if social_links -%}
          {%- render 'social-icons', class: 'footer__list-social' -%}
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>

